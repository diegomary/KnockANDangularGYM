@*@{Layout = null;}*@
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="~/solution_scripts/Angular-1.1.5/angular-1.1.5.js"></script>
    <link href="~/solution_scripts/Angular-1.1.5/Animate-1.1.5angularVariant.css" rel="stylesheet" />
</head>
<body data-ng-app="moduleApp">
    <div data-ng-controller="CustomerController">
        Name:<br />
        <input type="text" data-ng-model="inputData.name" placeholder="name" />
        <br />
        City:<br />
        <input type="text" data-ng-model="inputData.city" placeholder="city" />
        <br />
        <button data-ng-click="addCustomer()">Add Customer</button>
        <br />
        <br />
        Name: <input type="text" ng-model="nametosearch" placeholder="Type something" />&nbsp;&nbsp; {{ nametosearch }}
        <button data-ng-click="getData()">Get Customers</button>
        <ul>
            <li ng-animate="'animate'" ng-repeat="cust in customers | filter:nametosearch |orderBy:'name'">
                <input type="text" name="input" ng-model="cust.name" />
                <input type="text" name="input" ng-model="cust.city" />
                <button data-ng-click="getInnerData(cust.name)">Get Name</button>
                <button data-ng-click="getInnerData(cust.city)">Get City</button>
                <button data-ng-click="getInnerData($index)">Get Index</button>
                <button data-ng-click="getInnerData($first)">Is First ?</button>
                <button data-ng-click="getInnerData($last)">Is Last ?</button>
            </li>
        </ul>
    </div>
    <div data-ng-controller="OrderController">
        {{ codeName }}
    </div>
    <div data-ng-controller="DetailsController">
        {{ detailName }}
    </div>  

    <script src="~/solution_scripts/Angular-1.1.5/appcore.js"></script>
   
</body>
</html>

